<?xml version="1.0" encoding="utf-8"?>
<!-- Adding a drawable to style the listView items from
https://stackoverflow.com/questions/24095223/android-linearlayout
-add-border-with-shadow-around-a-linearlayout -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CABBBBBB"/>
            <corners android:radius="@dimen/border_radius_shape" />
        </shape>
    </item>

    <item
        android:left="@dimen/zero_dp"
        android:right="@dimen/zero_dp"
        android:top="@dimen/zero_dp"
        android:bottom="@dimen/border_radius_shadow">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="@dimen/border_radius_shape" />

        </shape>
    </item>
</layer-list>