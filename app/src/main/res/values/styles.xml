<resources>

    <!-- Main app style -->
    <style name="MyAppTheme" parent="@style/AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/body_text</item>
    </style>

    <!-- For the nav drawer
        From: https://medium.com/@ssaurel/implement-a-navigation-drawer-
        with-a-toolbar-on-android-m-68162f13d220 and
        https://www.murrayc.com/permalink/2014/10/28/android-changing-the-toolbars-
        text-color-and-overflow-icon-color/-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Style for the text in nav_header.xml -->
    <style name="TextInNavHeader">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Style for the sections "Cookie info" and "Supplier info" (add a cookie or edit cookie) -->
    <style name="SectionLabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/section_label_size</item>
        <item name="android:paddingLeft">@dimen/margin_horizontal</item>
        <item name="android:paddingTop">@dimen/margin_horizontal</item>
    </style>

    <!-- Style for a category in "add a cookie" or "edit cookie" -->
    <style name="CategoryStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/zero_dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingRight">@dimen/padding_styles</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for an EditText field in "add a cookie" or "edit cookie" -->
    <style name="EditorFieldStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Style for the measurement units for an EditText field in "add a cookie" or "edit cookie" -->
    <style name="EditorUnitsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">@dimen/padding_styles</item>
        <item name="android:paddingTop">@dimen/padding_styles</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for the dialog alerting the user about unsaved changes -->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorAccent</item> <!-- Color of the buttons (leave/keep editing) -->
        <item name="android:textColorPrimary">@color/textColorDialogQuestion</item> <!-- Color of the question -->
    </style>

    <!-- Style for the main headlines (for ex. the cookie name, "About") -->
    <style name="MainHeadline" parent="@style/AppTheme">
        <item name="android:fontFamily">@font/cookie_regular</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Style for the "Buy me" button -->
    <style name="BuyMeButton" parent="@style/AppTheme">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cookie_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/buy_me_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Style for the buttons that change the cookie quantity -->
    <style name="CookieQuantity" parent="@style/AppTheme">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_button_labels</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Style for the text such as "SEK/unit" and number of cookie sin stock -->
    <style name="SpecialInfoText" parent="@style/AppTheme">
        <item name="android:textSize">@dimen/special_info_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>